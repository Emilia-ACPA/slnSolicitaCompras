<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prjSolicitaCompras.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                x:Name="BtnNovaSolicitacao"
                Text="Nova Solicitação" 
                SemanticProperties.Hint="Clique para registrar nova solicitação"
                Clicked="BtnNovaSolicitacao_Clicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="BtnListaSolicitacoes"
                Text="Lista de Solicitações" 
                SemanticProperties.Hint="Clique para visualizar lista de solicitações"
                Clicked="BtnListaSolicitacoes_Clicked"
                HorizontalOptions="Fill" />

            <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="Fill" />

            <Label Text="CADASTROS" HorizontalTextAlignment="Center" FontSize="Subtitle"/>

            <Button
                x:Name="BtnUsuarios"
                Text="Usuários" 
                SemanticProperties.Hint="Clique para visualizar Cadastro de Usuários"
                Clicked="BtnUsuarios_Clicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="BtnUnidadesMedida"
                Text="Unidades de Medida" 
                SemanticProperties.Hint="Clique para visualizar Cadastro de Unidades de Medida"
                Clicked="BtnUnidadesMedida_Clicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="BtnItens"
                Text="Itens (Produtos)" 
                SemanticProperties.Hint="Clique para visualizar Cadastro de Itens(Produtos)"
                Clicked="BtnItens_Clicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
